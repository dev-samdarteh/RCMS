                <input asp-for="oChurchMember.LastName" class="form-control" placeholder="Last Name" readonly />
            </div>*@
    </div>
    <div class="form-row mb-2">
        <div class="col-md-4">
            <small asp-for="oChurchMember.Gender" class="control-label">Gender</small>
            <input asp-for="strGender" class="form-control text-sm" placeholder="Gender" readonly />
        </div>
        <div class="col-md">
            <small asp-for="oChurchMember.MaidenName " class="control-label">Maiden Name</small>
            <input asp-for="oChurchMember.MaidenName" class="form-control text-sm" placeholder="Maiden Name" readonly />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-md-4" id="_divMaritalStatus">
            <small asp-for="oChurchMember.MaritalStatus" class="control-label">Marital Status</small>
            <input asp-for="strMaritalStatus" class="form-control text-sm" placeholder="Gender" readonly />
        </div>
        <div class="input-group col-md-8" aria-describedby="fd_AgeBracket">
            <div class="col-md-8 m-0 p-0">
                <small asp-for="oChurchMember.DateOfBirth " class="control-label">Date of Birth</small>
                <input id="_DateOfBirth" type="text" asp-for="strDateOfBirth" class="form-control text-sm" placeholder="Date of Birth" readonly />
            </div>
            <div class="col-md-4 m-0 p-0">
                <small asp-for="oChurchMember.DateOfBirth" class="control-label"> Age </small>
                <input id="_strMemberAge" asp-for="strMemberAge" class="form-control text-sm" readonly />
            </div>
        </div>
    </div>

    <div class="form-row mb-2" id="_divMarriageType" hidden>
        <div class="col-md-4">
            <small asp-for="oChurchMember.MarriageType" class="control-label">Marriage Type</small>
            <input asp-for="strMarriageType " class="form-control text-sm" placeholder="Marriage Type" readonly />
        </div>
        <div class="col-md mb-2" id="_divMarriageRegNo" hidden>
            <small asp-for="oChurchMember.MarriageRegNo" class="control-label">Marriage Cert. No. </small>
            <input id="_MarriageRegNo" type="text" class="form-control text-sm" asp-for="oChurchMember.MarriageRegNo" readonly />
        </div>
    </div>

    <div class="form-row mb-2">
        <div class="col-md">
            <small class="font-weight-normal" asp-for="oChurchMember.GlobalMemberCode"> Member Code</small>
            <input type="text" class="form-control text-sm" maxlength="50" asp-for="oChurchMember.GlobalMemberCode" placeholder="Church code" aria-describedby="fd_GlobalMemberCode" readonly>
        </div>
        <div class="col-md">
            <small class="font-weight-normal" asp-for="oChurchMember.MemberCustomCode"> Member Custom Code </small>
            <input id="_MemberCustomCode" type="text" class="form-control text-sm" maxlength="50" asp-for="oChurchMember.MemberCustomCode" placeholder="Church code" aria-describedby="fd_MemberCustomCode" readonly>
        </div>
        <div class="col-md-2">
            <small class="font-weight-normal" asp-for="oChurchMember.Id"> #Item Id </small>
            <input type="text" class="form-control text-sm text-center" maxlength="50" asp-for="oChurchMember.Id" placeholder="#Item Id" readonly>
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-md">
            <small asp-for="oChurchMember.NationalityId" class="control-label">Nationality</small>
            <input asp-for="strNationality" class="form-control text-sm" placeholder="Nationality" readonly />
        </div>
        <div class="col-md">
            <small asp-for="oChurchMember.MotherTongueId" class="control-label">Mother Tongue</small>
            <input asp-for="strMotherTongue" class="form-control text-sm" placeholder="Mother Tongue" readonly />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-md">
            <small asp-for="oChurchMember.Hometown" class="control-label">Hometown</small>
            <input type="text" class="form-control text-sm" asp-for="oChurchMember.Hometown" readonly />
        </div>
        <div class="col-md">
            <small asp-for="oChurchMember.HometownRegionId" class="control-label">Hometown Region</small>
            <input asp-for="strHometownRegion" class="form-control text-sm" placeholder="Hometown Region" readonly />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-md">
            <small asp-for="oChurchMember.IdTypeId" class="control-label">National Id Type</small>
            <input asp-for="strIdType" class="form-control text-sm" placeholder="Id Type" readonly />
        </div>
        <div class="col-md" id="_divNational_IdNum" hidden>
            <small asp-for="oChurchMember.National_IdNum" class="control-label"> ID Number </small>
            <input id="_National_IdNum" type="text" maxlength="50" class="form-control text-sm" asp-for="oChurchMember.National_IdNum" placeholder="National ID Number" readonly />
        </div>
    </div>

    <div class="form-row mb-2">
        <div class="col-md">
            <small class="font-weight-normal" asp-for="oChurchMember.Hobbies"> Hobbies </small>
            <input type="text" maxlength="50" class="form-control text-sm" asp-for="oChurchMember.Hobbies" placeholder="Hobbies" readonly>
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-md-4">
            <small asp-for="strMemType" class="control-label"> Member Type </small>
            <input type="text" class="form-control text-sm" asp-for="strMemType" placeholder="Member Type" aria-describedby="fd_strMemType" readonly /> 
        </div>
        <div class="col-md">
            <small asp-for="oChurchMember.numMemRankId" class="control-label"> Member Rank </small>
            <input type="text" class="form-control text-sm" asp-for="strMemRank" placeholder="Member Rank" aria-describedby="fd_strMemRank" readonly />
        </div>
        <div class="col-md">
            <small asp-for="oChurchMember.numMemTypeId" class="control-label"> Member Status </small>
            <input type="text" class="form-control text-sm" asp-for="strMemStatus" placeholder="Member Status" aria-describedby="fd_strMemStatus" readonly />
        </div>
    </div>

