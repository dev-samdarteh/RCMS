            <input asp-for="strMemStatus" class="form-control text-sm" placeholder="Account Status" readonly />
        </div>
    </div>*@

    <div class="form-row mb-2">
        <div class="col-md">
            <small class="font-weight-normal" asp-for="oChurchMember.Notes"> Member Brief (Notes) </small>
            <textarea maxlength="300" asp-for="oChurchMember.Notes" class="form-control text-sm" rows="3" readonly></textarea>
        </div>
    </div>
}
